@model UserManagement.Web.Models.Users.UserDeleteViewModel

@* This page is a confirmation screen to make sure we really want to delete a user *@

<h2>Delete User</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete this user? This action cannot be undone.
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Forename @Model.Surname</h5>
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.Id</dd>
            
            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            
            <dt class="col-sm-3">Date of Birth:</dt>
            <dd class="col-sm-9">@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "Not specified")</dd>
            
            <dt class="col-sm-3">Account Status:</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" style="display: inline;">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this user?')">
            Delete User
        </button>
    </form>
    <a asp-action="View" asp-route-id="@Model.Id" class="btn btn-info">View Details</a>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</div>
