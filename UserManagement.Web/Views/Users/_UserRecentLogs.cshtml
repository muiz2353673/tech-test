@model UserManagement.Web.Models.Users.UserDetailViewModel
@inject UserManagement.Services.Domain.Interfaces.ILogService LogService

@{
    var logs = LogService.GetByUser(Model.Id, 0, 10).ToList();
}

<div class="table-responsive">
    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Action</th>
                <th>Description</th>
                <th>Created (UTC)</th>
            </tr>
        </thead>
        <tbody>
        @if (!logs.Any())
        {
            <tr>
                <td colspan="4" class="text-muted">No recent activity.</td>
            </tr>
        }
        else
        {
            foreach (var item in logs)
            {
                <tr>
                    <td><a asp-controller="Logs" asp-action="Details" asp-route-id="@item.Id">@item.Id</a></td>
                    <td>@item.Action</td>
                    <td>@item.Description</td>
                    <td>@item.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>


