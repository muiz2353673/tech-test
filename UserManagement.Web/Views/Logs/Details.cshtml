@model UserManagement.Web.Models.Logs.LogListItemViewModel

@* This page shows the details for a single log entry *@

<h2>Log Entry #@Model.Id</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">User Id</dt>
            <dd class="col-sm-9">@(Model.UserId?.ToString() ?? "-")</dd>

            <dt class="col-sm-3">Action</dt>
            <dd class="col-sm-9">@Model.Action</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Created (UTC)</dt>
            <dd class="col-sm-9">@Model.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm:ss")</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-secondary">Back to Logs</a>
        @if (Model.UserId.HasValue)
        {
            <a asp-action="ForUser" asp-route-userId="@Model.UserId" class="btn btn-outline-secondary">See all for this user</a>
        }
    </div>
</div>


